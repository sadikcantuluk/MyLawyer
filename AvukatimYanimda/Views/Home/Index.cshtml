@{
    ViewData["Title"] = "Anayasa Hukuk Asistanı";
}

<div class="landing-container">
    <div class="hero-section">
        <div class="hero-content">
            <div class="logo-container">
                <i class="fas fa-balance-scale"></i>
            </div>
            <h1>Anayasa Hukuk Asistanı</h1>
            <p class="hero-description">
                Türkiye Anayasası hakkında merak ettiğiniz her şeyi yapay zeka destekli hukuk asistanımıza sorabilirsiniz.
            </p>
            <div class="features">
                <div class="feature">
                    <i class="fas fa-bolt"></i>
                    <span>Anında Yanıtlar</span>
                </div>
                <div class="feature">
                    <i class="fas fa-book"></i>
                    <span>Güncel Anayasa Bilgisi</span>
                </div>
                <div class="feature">
                    <i class="fas fa-clock"></i>
                    <span>7/24 Erişim</span>
                </div>
            </div>
            <a href="@Url.Action("Index", "Chat")" class="start-button">
                <span>Sohbete Başla</span>
                <i class="fas fa-arrow-right"></i>
            </a>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        .landing-container {
            min-height: calc(100vh - 120px);
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            text-align: center;
            padding: 2rem;
            margin-bottom: 120px;
            background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%);
        }

        .hero-section {
            max-width: 800px;
            text-align: center;
            background: white;
            padding: 3rem;
            border-radius: 24px;
            box-shadow: 0 10px 40px rgba(0,0,0,0.1);
            animation: slideUp 0.6s ease-out;
        }

        .logo-container {
            width: 100px;
            height: 100px;
            background: linear-gradient(135deg, #1a73e8, #289cf5);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 2rem;
        }

        .logo-container i {
            font-size: 3rem;
            color: white;
        }

        .hero-content h1 {
            font-size: 2.5rem;
            color: #2c3e50;
            margin-bottom: 1rem;
            font-weight: 700;
        }

        .hero-description {
            font-size: 1.2rem;
            color: #666;
            margin-bottom: 2.5rem;
            line-height: 1.6;
        }

        .features {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 2rem;
            margin-bottom: 3rem;
        }

        .feature {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 0.75rem;
        }

        .feature i {
            font-size: 1.75rem;
            color: #1a73e8;
        }

        .feature span {
            font-size: 1rem;
            color: #4a5568;
            font-weight: 500;
        }

        .start-button {
            display: inline-flex;
            align-items: center;
            gap: 1rem;
            background: #1a73e8;
            color: white;
            padding: 1rem 2rem;
            border-radius: 12px;
            font-size: 1.1rem;
            font-weight: 600;
            text-decoration: none;
            transition: all 0.3s ease;
        }

        .start-button:hover {
            background: #1557b0;
            transform: translateY(-2px);
            color: white;
            text-decoration: none;
        }

        .start-button i {
            transition: transform 0.3s ease;
        }

        .start-button:hover i {
            transform: translateX(4px);
        }

        @@keyframes slideUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Responsive tasarım */
        @@media (max-width: 768px) {
            .landing-container {
                padding: 1rem;
            }

            .hero-section {
                padding: 2rem;
            }

            .hero-content h1 {
                font-size: 2rem;
            }

            .hero-description {
                font-size: 1.1rem;
            }

            .features {
                grid-template-columns: 1fr;
                gap: 1.5rem;
            }
        }
    </style>
} 